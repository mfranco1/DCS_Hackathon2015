<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Home">
    android:background="@drawable/bgmain"

    <AutoCompleteTextView
        android:id="@+id/searchSourceText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Source"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="#ff000000" />

    <AutoCompleteTextView
        android:id="@+id/searchDestinationText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Destination"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="#ff000000"
        android:layout_below="@+id/terminalView"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/searchLocationButton"
        style="?android:textAppearanceSmall"
        android:layout_width="195dp"
        android:layout_height="33dp"
        android:text="SEARCH"
        android:textColor="#ff000000"
        android:background="#cf5fc1ef"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/searchDestinationText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="57dp" />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/terminalView"
        android:layout_below="@+id/searchSourceText"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
